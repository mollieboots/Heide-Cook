{# why choose us section such as on the home page #}
<section class="why-choose-us">
    <div class="row column">
        <h1 class="green-header">{{ SP.ACF.get_sub_field('title') }}</h1>
    </div>
    <div class="row why-choose-us-content">
        <div class="large-6 columns">
            <ul class="accordion" data-allow-all-closed="true" data-multi-expand="true" data-allow-all-closed="true" data-accordion>
                {% for item in SP.ACF.get_sub_field('accordion') %}
                    <li class="accordion-item" data-accordion-item>
                        <a href="#" class="accordion-title">{{ item.title }}</a>
                        <div class="accordion-content" data-tab-content>
                            {{ item.content }}
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="large-6 columns">
            <div class="quote-container">
                <blockquote>
                    {{ SP.ACF.get_sub_field('testimony') }}
               </blockquote>
                <cite>{{ SP.ACF.get_sub_field('testimony_author') }}</cite>
            </div>
       </div>
    </div>
    <div class="testimony-author row column">
        <img src="{{ SP.ACF.get_sub_field('image').url }}">
    </div>
</section>
