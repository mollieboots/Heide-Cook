<html>
<head>
    {% block meta %}
        <meta charset="utf-8">
        <meta name="viewport" content="height=device-height,width=device-width,initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
        <title>{{ SP.WordPress.title() }}</title>
        {% if SP.ACF.get_field('favicon', 'option') %}
            <link rel="shortcut icon" type="image/png" href="{{ SP.ACF.get_field('favicon', 'option').url }}"/>
        {% elseif SP.ACF.get_field('menu_logo', 'option') %}
            <link rel="shortcut icon" type="image/png" href="{{ SP.ACF.get_field('menu_logo', 'option').url }}"/>
        {% endif %}
    {% endblock %}

    {% block stylesheets %}
        {{ SP.WordPress.header() }}
    {% endblock %}
</head>
<body {{ SP.WordPress.classes() }}>
{% block menu %}
    {% include "layout/menu.html.twig" %}
    {% include "layout/quote-lightbox.html.twig" %}
{% endblock %}
{% block body %}

    {% if start_loop is not defined or start_loop %}
        {{ SP.WordPress.thePost() }}
    {% endif %}

    {% block header %}
        {% include "layout/header.html.twig" %}
    {% endblock %}

    {% block content %}
        {% if content is defined and content|length %}
            {% for row in content %}
                {{ row }}
            {% endfor %}
        {% endif %}
    {% endblock %}

    {% block locations %}
        {% include "layout/locations.html.twig" %}
    {% endblock %}
    {% block footer %}
        {% include "layout/footer.html.twig" %}
    {% endblock %}
{% endblock %}

{% block scripts %}
    {{ SP.WordPress.footer() }}
{% endblock %}
</body>
</html>
